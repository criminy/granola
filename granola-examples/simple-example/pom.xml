<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
   <parent>
		<artifactId>granola-examples-parent</artifactId>
		<groupId>granola</groupId>
		<version>0.2-SNAPSHOT</version>
	</parent>
	<groupId>granola</groupId>
	<artifactId>granola-simple-example</artifactId>
	<version>0.2-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>granola-simple-example</name>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>granola</groupId>
			<artifactId>granola-core</artifactId>
			<version>0.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>granola</groupId>
			<artifactId>granola-servlet</artifactId>
			<version>0.2-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>granola-simple-example</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
